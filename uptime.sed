#!/usr/bin/sed -f

s/[[:space:]]//g
s/.*up\(.*\),[0-9]*user.*/\1/;s/,//
s/days*/D/
s/hrs*/H/
s/hours*/H/
s/mins*/M/
s/secs*/S/
s/\([0-9]*\):\([0-9]*\):\([0-9]*\)/\1H\2M\3S/
s/\([0-9]*\):\([0-9]*\)/\1H\2M00S/
/D/!s/^/00D/
/H/!s/D/D00H/
/M/!s/H/H00M/
/S/!s/$/00S/
s/[DHM]/:/g
s/S//
s/:\([0-9]\):/:0\1:/g
s/^\([0-9]\):/0\1:/
s/:\([0-9]\)$/:0\1/

