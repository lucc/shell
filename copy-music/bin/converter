#!/bin/sh

PROG="`basename "$0"`"
FORMAT=ogg
QUALITY=middle

usage () {
  echo "usage: $PROG [options] {-i|--input} FILE {-o|--output} FILE"
  echo "options: --quality {bad|middle|good}"
  echo "         --format {ogg|mp3}"
  echo "         --bad|--middle|--good"
  echo "         --ogg|--mp3"
}

if which ffmpeg >/dev/null 2>&1; then
  :
fi
convert2ogg () {
:
}

convert2mp3 () {
:
}

while [ $# -ne 0 ]; do
  case "$1" in
    --quality)
      case "$2" in
	bad)    QUALITY=bad ;;
	middle) QUALITY=middle ;;
	good)   QUALITY=good ;;
	*) usage; exit 2 ;;
      esac
      shift 2
      ;;
    --input|-i)
      IFILE="$2"
      shift 2
      ;;
    --output|-o)
      OFILE="$2"
      shift 2
      ;;
    --bad|--middle|--good)
      tmp="$1"
      shift 1
      set --quality ${1#--} "$@"
      ;;
    --ogg|--mp3)
      tmp="$1"
      shift 1
      set --format ${1#--} "$@"
      ;;
    *) usage; exit 2 ;;
  esac
done


