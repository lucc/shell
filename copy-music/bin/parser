#!/bin/sh

PROG="`basename "$0"`"

usage () {
  echo "usage: $PROG [options] {-i|--input} FILE {-o|--output} FILE"
  echo "options: --quality {bad|middle|good}"
}

while [ $# -ne 0 ]; do
  case "$1" in
    --quality)
      case "$2" in
	bad) QUALITY=bad ;;
	middle) QUALITY=middle ;;
	good) QUALITY=good ;;
	*) usage; exit 2 ;;
      esac
      shift 2
      ;;
    --input|-i)
      IFILE="$2"
      shift 2
      ;;
    --output|-o)
      OFILE="$2"
      shift 2
      ;;
    *) usage; exit 2 ;;
  esac
done

